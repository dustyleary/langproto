package docker

import (
    "errors"
    "io"
    "io/ioutil"
    "os"
    "os/exec"
)

type Archive io.Reader

type Compression uint32

const (
    Uncompressed Compression = iota
    Bzip2
    Gzip
    Xz
)

func (compression *Compression) Flag() string {
    switch *compression {
    case Bzip2:
        return "j"
    case Gzip:
        return "z"
    case Xz:
        return "J"
    }
    return ""
}

